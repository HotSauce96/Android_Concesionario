<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/car_red_sports_car">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/Vehiculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"
            android:text="Compra Vehiculos"
            android:textColor="@color/white"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Factura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/roboto_slab_bold"
            android:gravity="center"
            android:text="Conect"
            android:textColor="@color/white"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonVehiculo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CA2929"
            android:gravity="center"
            android:onClick="Vehiculo"
            android:text="Vehiculo"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:translationX="100dp"
            android:translationY="400dp" />

        <Button
            android:id="@+id/buttonFactura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CA2929"
            android:gravity="center|clip_vertical"
            android:onClick="Factura"
            android:text="Factura"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:translationX="100dp"
            android:translationY="500dp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>