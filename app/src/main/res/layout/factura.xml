<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Factura"
    android:orientation="vertical"
    android:background="@drawable/car_red_sports_car"
    android:gravity="center">

    <TextView
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:text="Factura"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#8F000000"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/noto_sans"
                android:text="Codigo"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etCodigo"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/noto_sans"
                android:text="Fecha"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etFecha"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:textColor="@color/white" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/noto_sans"
            android:text="Placa"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etPlacaF"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/alegreya_sans_sc"
                android:textColor="@color/white" />

            <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alegreya_sans_sc"
                android:onClick="Buscar"
                android:text="Buscar"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Marca"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etMarcaF"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Modelo"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etModeloF"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Valor"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/etValorF"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <CheckBox
                android:id="@+id/checkBoxFactura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Activo"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="normal" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alegreya_sans_sc"
                android:onClick="Guardar"
                android:text="Guardar"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alegreya_sans_sc"
                android:onClick="Consultar"
                android:text="Consultar"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alegreya_sans_sc"
                android:onClick="Anular"
                android:text="Anular"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/alegreya_sans_sc"
                android:onClick="Cancelar"
                android:text="Cancelar"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:text="←"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alegreya_sans_sc"
        android:onClick="Regresar" />


</LinearLayout>